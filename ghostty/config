# Font settings
font-family = "Monaco Nerd Font Mono"
font-size = 18

# Scrollback
scrollback-limit = 10000

# Cursor
cursor-style = block

# Shell
command = /bin/zsh

# Close without confirmation
confirm-close-surface = false

# macOS: Option as Alt (left only)
macos-option-as-alt = left

# Window appearance
window-padding-x = 0
window-padding-y = 0
window-decoration = false
macos-titlebar-style = hidden

# Font thickening on macOS
font-thicken = true

# Cell height adjustment (110% = 1.1 multiplier)
adjust-cell-height = 10%

# Keybindings for Ctrl+h/j/k/l to send escape sequences (for tmux/neovim navigation)
keybind = ctrl+h=text:\x1bh
keybind = ctrl+j=text:\x1bj
keybind = ctrl+k=text:\x1bk
keybind = ctrl+l=text:\x1bl

# Reload config
keybind = alt+r=reload_config
